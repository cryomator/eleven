version: "3.4"

services:
  wservergg:
    build:
      context: .
      target: development
    volumes:
      - ./:/go/src/wservergg:rw
    ports:
      - 40000:40000
    security_opt:
      - apparmor=unconfined
    cap_add:
      - SYS_PTRACE
    command: ["vgo", "run", "--race", "main.go"]
#    command: ["fresh", "-c", "runner.conf"]
#    command: ["dlv", "debug", "--listen=:40000", "--headless=true", "--api-version=2"]
